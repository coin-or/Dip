#===========================================================================#
# library name
LIBKNAP = libKnapPisinger.@LIBEXT@

# source files
OBJS_SRC += mcknap.c
OBJS_SRC += combo.c

OBJS     += mcknap.o
OBJS     += combo.o

# include flags
ADDINCFLAGS += 

#===========================================================================#
# directory to the source files
SRCDIR = @srcdir@
VPATH  = @srcdir@

#===========================================================================#
# C compiler, linker
CC = @CC@
AR = @AR@

# C compiler options
CCFLAGS = @CFLAGS@

#===========================================================================#
# includes
INCL =  -I. $(ADDINCFLAGS)

#===========================================================================#
.SUFFIXES: .c .o

$(LIBKNAP): $(OBJS)
	$(AR) -q -s $@ ${OBJS}

clean:
	rm -rf *.o $(LIBKNAP)

.c.o:
	$(CC) $(CCFLAGS) $(INCL) -c $<


